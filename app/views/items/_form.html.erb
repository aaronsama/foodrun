<%= form_for @item, remote: true do |f| %>
  <%= f.text_field :name, :placeholder => "Name?", :autocomplete => "off" %>
  <%= f.select :description, [], {}, {class: 'item-autocomplete'} %>
  <%= f.hidden_field :order_id, :value => @order.id %>
  <%= f.hidden_field :price %>
  <%= f.submit "Add it to the order!", :class => "button", data: { disable_with: "Creating order..." } %>
  <%= f.button "Add a Lunchtronic", class: 'button', id: 'add_lunchtronic' %>
<% end %>
